<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="273.0" prefWidth="474.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controller.ChangePassword">
    <children>
        <Label layoutX="85.0" layoutY="46.0" text="You're changing your password" textFill="WHITE">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
        <Label layoutX="99.0" layoutY="107.0" text="New Password:" textFill="WHITE">
            <font>
                <Font size="13.0" />
            </font>
        </Label>
        <Button layoutX="133.0" layoutY="216.0" mnemonicParsing="false" onAction="#changePassword" style="-fx-background-color: white;" text="Change">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <Button layoutX="276.0" layoutY="216.0" mnemonicParsing="false" onAction="#stayProfile" style="-fx-background-color: white;" text="Cancel">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
      <PasswordField fx:id="newPassword" layoutX="234.0" layoutY="104.0" />
      <Label layoutX="99.0" layoutY="159.0" text="Re-confirm password:" textFill="WHITE">
         <font>
            <Font size="13.0" />
         </font>
      </Label>
      <PasswordField fx:id="reconfirmPassword" layoutX="234.0" layoutY="156.0" />
      <Label fx:id="changePassword_error" alignment="CENTER" layoutX="53.0" layoutY="196.0" prefHeight="19.0" prefWidth="368.0" textFill="RED">
         <font>
            <Font size="13.0" />
         </font>
      </Label>
    </children>
</AnchorPane>
