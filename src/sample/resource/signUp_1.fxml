<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controller.SignUp">
    <children>
        <Label layoutX="208.0" layoutY="49.0" text="User Registration" textFill="WHITE">
            <font>
                <Font size="33.0" />
            </font>
        </Label>
        <Label layoutX="162.0" layoutY="137.0" text="Username:" textFill="WHITE">
            <font>
                <Font size="13.0" />
            </font>
        </Label>
        <TextField fx:id="usernameSignUp" layoutX="274.0" layoutY="134.0" />
        <Label layoutX="190.0" layoutY="190.0" text="Email:" textFill="WHITE">
            <font>
                <Font size="13.0" />
            </font>
        </Label>
        <TextField fx:id="emailSignUp" layoutX="274.0" layoutY="187.0" />
        <Label layoutX="161.0" layoutY="246.0" text="Password:" textFill="WHITE">
            <font>
                <Font size="13.0" />
            </font>
        </Label>
        <Label layoutX="94.0" layoutY="296.0" text="Re-confirm Password:" textFill="WHITE">
            <font>
                <Font size="13.0" />
            </font>
        </Label>
        <PasswordField fx:id="passwordSignUp" layoutX="274.0" layoutY="243.0" />
