            <image>
                <Image url="@../Photo/111.png" />
            </image>
        </ImageView>
      <Button layoutX="476.0" layoutY="187.0" mnemonicParsing="false" onAction="#saveNewUser" text="Create">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <Button layoutX="475.0" layoutY="243.0" mnemonicParsing="false" onAction="#toLogin" prefHeight="26.0" prefWidth="50.0" text="Back">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
    </children>
</AnchorPane>
